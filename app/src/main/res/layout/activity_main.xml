<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scannerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanner Status"
        android:textSize="20dp" />

    <EditText

        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:visibility="gone" />

    <EditText

        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:visibility="gone" />

    <EditText

        android:id="@+id/accountbalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Accountbalance"
        android:visibility="gone" />

    <EditText

        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sex"
        android:visibility="gone" />

    <EditText

        android:id="@+id/dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dept"
        android:visibility="gone" />

    <EditText

        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Level"
        android:visibility="gone" />

    <EditText

        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DOB"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/leftThumb_fp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/thumb_left" />

        <ImageView
            android:id="@+id/leftIndex_fp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/index_left" />

        <ImageView
            android:id="@+id/rightThumb_fp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/thumb_right" />

        <ImageView
            android:id="@+id/rightIndex_fp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/index_right" />

        <TextView
            android:id="@+id/fingerMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matching"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_Thumb_Capture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="LeftThumbCapture"
            android:text="Left Thumb Capture"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/left_Index_Capture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="LeftIndexCapture"
            android:text="Left Index Capture"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/right_Thumb_Capture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="RightThumbCapture"
            android:text="Right Thumb Capture"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/right_Index_Capture"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="RightIndexCapture"
            android:text="Right Index Capture"
            android:textAlignment="center"
            android:textSize="10dp" />


        <Button
            android:id="@+id/saveDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:onClick="saveToDB"
            android:text="SavetoDB"
            android:textAlignment="center"
            android:textSize="10dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/strin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:longClickable="true"
            android:text="String"
            android:textIsSelectable="true"

            android:textSize="20dp" />
    </ScrollView>


</LinearLayout>